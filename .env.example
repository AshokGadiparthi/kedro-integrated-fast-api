# ML Platform - Environment Configuration
# Copy this file to .env and update values

# ============================================================================
# FastAPI Configuration
# ============================================================================
FASTAPI_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite (Development - default)
DATABASE_URL=sqlite:///./test.db

# PostgreSQL (Production recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/ml_platform

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/ml_platform

# ============================================================================
# Cache Configuration
# ============================================================================
# Redis (Optional - for caching EDA results)
REDIS_URL=redis://localhost:6379/0

# If Redis is not available, app will use in-memory cache
CACHE_TYPE=memory  # Options: redis, memory

# ============================================================================
# JWT / Authentication Configuration
# ============================================================================
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=*
# Production: CORS_ORIGINS=["https://yourdomain.com"]

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# ============================================================================
# EDA Configuration
# ============================================================================
# Max file size for EDA (in MB)
MAX_FILE_SIZE_MB=500

# Max dataset rows for analysis
MAX_ROWS_FOR_ANALYSIS=1000000

# EDA job timeout (in seconds)
EDA_JOB_TIMEOUT_SECONDS=600

# ============================================================================
# Production Settings (Set before deploying)
# ============================================================================
# FASTAPI_ENV=production
# DEBUG=False
# SECURE_COOKIES=True
# SECURE_HTTPS=True
