# ML Platform - Environment Variables
# =====================================
# Copy this to .env and fill in your values

# Database Configuration
# For SQLite (local development - default)
DATABASE_URL=sqlite:///./ml_platform.db

# For PostgreSQL (future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/ml_platform

# Security
# IMPORTANT: Change this to a random string in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production-to-random-string

# Server
HOST=127.0.0.1
PORT=8000

# Logging
LOG_LEVEL=INFO
ECHO_SQL=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
